<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.kamoteracer.controller.GameOverController" prefWidth="550" prefHeight="440">
    <children>
        <!-- Simple white background to mimic the attached image -->
        <Region style="-fx-background-color: white;"/>

        <VBox alignment="CENTER" spacing="24">
            <children>
                <Label text="Game Over" fx:id="titleLabel"
                       style="-fx-font-size: 48px; -fx-font-weight: bold; -fx-text-fill: #e5522a; -fx-effect: dropshadow(gaussian, #213040, 4, 0.4, 2, 2);"/>

                <HBox alignment="CENTER" spacing="12">
                    <children>
                        <Label text="HIGHSCORE" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #213040;"/>
                        <Label fx:id="scoreLabel" text="0" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #213040;"/>
                    </children>
                </HBox>

                <HBox alignment="CENTER" spacing="32">
                    <children>
                        <Button fx:id="tryAgainButton" text="TRY AGAIN" mnemonicParsing="false"
                                style="-fx-background-color: #e5522a; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 16 10 16; -fx-font-size: 14px;"/>
                        <Button fx:id="saveHighscoreButton" text="SAVE HIGHSCORE" mnemonicParsing="false"
                                style="-fx-background-color: #e5522a; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 16 10 16; -fx-font-size: 14px;"/>
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets top="24" bottom="24" left="24" right="24"/>
            </padding>
        </VBox>
    </children>
</StackPane>


