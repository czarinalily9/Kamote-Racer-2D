<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.kamoteracer.controller.GameOverDialogController" fx:id="root" prefWidth="825" prefHeight="660">
    <children>
        <Pane fx:id="dialogRoot" style="-fx-background-color: #d9d9d9; -fx-background-radius: 8;" prefWidth="750" prefHeight="540">
            <children>
                <ImageView fx:id="titleImage" layoutX="60" layoutY="10" fitWidth="380" preserveRatio="true">
                    <image>
                        <Image url="@/images/Game over.png"/>
                    </image>
                </ImageView>
                <ImageView fx:id="carImage" layoutX="40" layoutY="160" fitWidth="420" preserveRatio="true">
                    <image>
                        <Image url="@/images/game over car.png"/>
                    </image>
                </ImageView>
                <ImageView fx:id="highscoreImage" layoutX="120" layoutY="120" fitWidth="260" preserveRatio="true">
                    <image>
                        <Image url="@/images/game over highscore.png"/>
                    </image>
                </ImageView>
                <Label fx:id="scoreLabel" layoutX="235" layoutY="124" visible="false" text="0"
                       style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                <ImageView fx:id="tryAgainImage" layoutX="80" layoutY="300" fitWidth="150" preserveRatio="true" pickOnBounds="true">
                    <image>
                        <Image url="@/images/game over try again.png"/>
                    </image>
                </ImageView>
                <ImageView fx:id="saveScoreImage" layoutX="270" layoutY="300" fitWidth="150" preserveRatio="true" pickOnBounds="true">
                    <image>
                        <Image url="@/images/game over Save highscore.png"/>
                    </image>
                </ImageView>
            </children>
        </Pane>
    </children>
</StackPane>